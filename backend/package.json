{
  "name": "ecosort-smartwaste-backend",
  "version": "1.0.0",
  "description": "Backend API for EcoSort SmartWaste AI - Multimodal waste classification with Hugging Face integration",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t ecosort-backend .",
    "docker:run": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "waste-management",
    "ai",
    "hugging-face",
    "sustainability",
    "hackathon"
  ],
  "author": "EcoSort Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nock": "^13.5.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
