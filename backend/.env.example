# Server Configuration
PORT=5000
NODE_ENV=development

# Hugging Face API Configuration
# Get your token from: https://huggingface.co/settings/tokens
HF_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
HF_IMAGE_MODEL=nateraw/food
HF_AUDIO_MODEL=openai/whisper-base

# Database Configuration
DB_PATH=./db/ecosort.sqlite

# Storage Configuration
UPLOAD_DIR=./uploads
MAX_IMAGE_SIZE_MB=5
MAX_AUDIO_SIZE_MB=10

# Firebase Configuration (Optional - set USE_FIREBASE=true to enable)
USE_FIREBASE=false
FIREBASE_SERVICE_ACCOUNT=./config/firebase-service-account.json
FIREBASE_PROJECT_ID=your-project-id

# Security
ADMIN_API_KEY=your-super-secret-admin-key-change-this
JWT_SECRET=your-jwt-secret-for-future-auth

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CLASSIFY_RATE_LIMIT_MAX=30

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# External Services (Optional)
SENTRY_DSN=
